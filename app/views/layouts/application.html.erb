<!DOCTYPE html>
<html>
  <head>
    <title>Tweetland</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class='navbar navbar-dark bg-primary'>
        <a class="navbar-brand" href="#">Tweetland</a>
        <ul class='navbar-nav mr-auto'>
          <% if current_user %>
            <li class='nav-item'>Logged in as <%= current_user.email %></li>
            <li class='nav-item'><%= link_to "Logout", logout_path %></li>
          <% else %>
            <li><%= link_to "Login", login_path %></li>
          <% end %>
        </ul>
      </nav>

      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "alert alert_#{name}", role: 'alert' %>
      <% end %>
      <div class='container'>
        <%= yield %>
      </div>
  </body>
</html>
